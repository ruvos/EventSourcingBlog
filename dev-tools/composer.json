{
    "name": "ruwen/dev-tools",
    "autoload": {
        "psr-4": {
            "Ruwen\\DevTools\\": "src/"
        }
    },
    "authors": [
        {
            "name": "DDEV User",
            "email": "nobody@example.com"
        }
    ],
    "config": {
        "platform": {
            "php": "8.3"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.1",
        "rector/rector": "^2.0",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "*"
    },
    "scripts": {
        "rector": "rector process src",
        "phpstan": "phpstan analyse src",
        "phpunit": "vendor/bin/phpunit -c ../phpunit.xml",
        "report": "XDEBUG_MODE=coverage vendor/bin/phpunit -c ../phpunit.xml --coverage-html ../public/report"
    }
}
