{
    "name": "ruwen/dev-tools",
    "autoload": {
        "psr-4": {
            "Ruwen\\DevTools\\": "src/"
        }
    },
    "authors": [
        {
            "name": "DDEV User",
            "email": "nobody@example.com"
        }
    ],
    "config": {
        "platform": {
            "php": "8.3"
        },
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.1",
        "rector/rector": "^2.0",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "*",
        "infection/infection": "^0.29.14"
    },
    "scripts": {
        "rector": "rector process src",
        "phpstan": "phpstan analyse ./../src --level 1",
        "phpunit": "vendor/bin/phpunit -c ../phpunit.xml",
        "report": "XDEBUG_MODE=coverage vendor/bin/phpunit -c ../phpunit.xml --coverage-html ../public/report",
        "roundtrip": "php vendor/bin/phpcs ../src && composer report"
    }
}
